@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model LoginViewModel
@inject SignInManager<ApplicationUser> SignInManager

<div class="container-fluid main-register-login mt-5 mb-5">
    <h1>Log in</h1>
    <hr>
    <!-- <h2 class="mb-5">Sign Up to GroupUp and start using our service.</h2>        -->
    <div class="container sub-register-login">
        <form>
            <div class="row mt-4 text-left">
                <div class="col">
                    <label>Email Address</label>
                    <input type="text" class="form-control" placeholder="jonsnow@mail.com">
                </div>
            </div>
            <div class="row mt-3 text-left">
                <div class="col">
                    <label>Password</label>
                    <input type="password" class="form-control mb-2" placeholder="*********">
                    <a href="#">Forgot password?</a>
                </div>
            </div>

            <button id="LoginButton" class="btn-special btn-light blue pr-5 mt-4 pl-5">Log In</button>
        </form>
    </div>

</div>


