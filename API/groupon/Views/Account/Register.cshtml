            success: function (data) {
                if (data.toString() == '200')
                    console.log("Succesful. " + data);
                    window.location = "@Url.Action("Index", "Home")";
                else
                    console.log("Unsuccesful. " + data);
                    window.location = "@Url.Action("Index", "Home")";
            }
        });
        false;
    }
</script>