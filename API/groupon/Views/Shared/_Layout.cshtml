<script>

    $("#Logout").click(logOut);
    var pressCount = 0;
    function logOut() {
        $('#loader').removeClass("hidden");
        $.ajax({
            url: "https://localhost:44330/Account/Logout",
            type: 'POST',
            data: {},
            statusCode: {
                200: function (data) {
                    if ($.trim(data.success) == 'false') {
                        ErrorAlert("Error!", data.error);
                    }
                    else {
                        window.location = "@Url.Action("Login", "Account")";
                    }
                },
                400: function (data) {
                    ErrorAlert("Error!", "Log out request was invalid");
                },
                500: function () {
                    ErrorAlert("Error from server side!", "Server failed to respond to request");
                }
            }
        }).done(function () {
            $('#loader').addClass("hidden");
        });
        return false;
    }

    function ErrorAlert(bolded, normal) {
        $('#handlerid').empty().append("<strong>" + bolded + " </strong>" + normal);
        pressCount++;
        $('#handlerid').addClass('alert-danger').removeClass("hidden").fadeTo(300, 1);

        setTimeout(function () {
            if (pressCount == 1) {
                $('#handlerid').fadeTo(300, 0);
                setTimeout(function () {
                    $('#handlerid').addClass('hidden').removeClass('alert-danger');
                }, 1000);
            }
            pressCount--;
        }, 4000);
    }

</script>

